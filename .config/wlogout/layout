{
    "label" : "lock",
    "action" : "hyprlock -c $HOME/.config/hypr/hyprlock.conf",
    "text" : "Lock",
    "keybind" : "l"
}
{
    "label" : "hibernate",
    "action" : "bash -c 'hyprlock -c $HOME/.config/hypr/hyprlock.conf & sleep 1 && systemctl hibernate'",
    "text" : "Hibernate",
    "keybind" : "h"
}
{
    "label" : "logout",
    "action" : "loginctl terminate-user $USER",
    "text" : "Logout",
    "keybind" : "e"
}
{
    "label" : "shutdown",
    "action" : "systemctl poweroff",
    "text" : "Shutdown",
    "keybind" : "s"
}
{
    "label" : "suspend",
    "action" : "bash -c 'hyprlock -c $HOME/.config/hypr/hyprlock.conf & sleep 1 && systemctl suspend'",
    "text" : "Suspend",
    "keybind" : "u"
}
{
    "label" : "reboot",
    "action" : "systemctl reboot",
    "text" : "Reboot",
    "keybind" : "r"
}

